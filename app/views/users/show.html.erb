<%= provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed" id="user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-xs btn-primary" %>
        【<%= l(@first_day, format: :middle) %>】時間管理表
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-xs btn-primary" %>
      </td>
      <td>指定勤務開始時間 ： <%= format_basic_info(@user.designated_work_start_time) %><br>指定勤務終了時間 ： <%= format_basic_info(@user.designated_work_end_time) %></td>
      <td colspan="2">基本時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>月初日 : <%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード：</td>
      <td>出勤日数 : <%= @worked_sum %>日</td>
      <td>月末日 : <%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "勤怠編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV出力", "#", class: "btn btn-primary" %>
  <%= link_to "勤怠ログ", "#", class: "btn btn-primary" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr> <!--rowspan:縦結合、colspan：横結合-->
        <th rowspan = "3">残業申請</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "5">[実績]</th>
        <th colspan = "4">所定外勤務</th>
      </tr>
      <tr> 
        <th>勤怠登録</th>
        <th>出勤時間</th>
        <th>退勤時間</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>終了予定時間</th>
        <th>時間外時間</th>
        <th>業務処理内容</th>
        <th>指示者確認印</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <% css_class = 
            case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
            when '土' then
              'text-primary'
            when '日' then
              'text-danger'
            end %>
        <tr>
          <td><%= link_to "残業申請", "#", class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan:横結合-->
      <tr>
        <td colspan="4">累計日数</td>
        <td colspan="3">総合勤務時間</td>
        <td colspan="4">累計在社時間</td>
        <td rowspan="2">所属長承認：<br>
          <div class="form-group">
            <div class="col-sm-14">
              <select class="form-control">
                <option></option>
                <option>上長A</option>        
              </select>
            </div>
          </div>
          <%= link_to "申請", "#", class: "btn btn-primary" %>
        </td>
      </tr>
      <tr>
        <td colspan="4"><%= @attendances.count %></td>
        <td colspan="3"><%= format_basic_info(@user.designated_work_start_time).to_f * @worked_sum %></td>
        <td colspan="4"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>
  </table>
</div>